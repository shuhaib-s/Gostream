# Backend API URL
# Must be accessible from browser
NEXT_PUBLIC_API_URL=http://localhost:4000

# RTMP Server URL
# This is what users will see in their dashboard to configure OBS
# For local: rtmp://localhost/live
# For production: rtmp://your-rtmp-server.com/live or rtmp://YOUR_VM_IP/live
NEXT_PUBLIC_RTMP_URL=rtmp://localhost/live

# RTMP Port (default: 1935)
NEXT_PUBLIC_RTMP_PORT=1935

# HLS Streaming URL
# Must be accessible from browser
# For local: http://localhost:8080/hls
# For production: http://YOUR_VM_IP:8080/hls or use CDN
NEXT_PUBLIC_HLS_URL=http://localhost:8080/hls

